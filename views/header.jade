nav.navbar.navbar-default.navbar-fixed-top.navbar-shrink
	.container
		.navbar-header.page-scroll
			button.navbar-toggle(type="button", data-toggle="collapse", data-target="#page-list")
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/")= name

		#page-list.collapse.navbar-collapse
			ul.nav.navbar-nav.navbar-right
				each page, i in nav
					li.page-scroll
						if page.popup
							a(href="#{page.href}", target="_blank")= page.title
						else
							a(href="#{page.href}")= page.title

if header
	header
		.container
			!= header.content
