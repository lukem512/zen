nav.navbar.navbar-default.navbar-fixed-top.navbar-shrink
	.container
		.navbar-header.page-scroll
			button.navbar-toggle(type="button", data-toggle="collapse", data-target="#page-list")
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/")= name

		#page-list.collapse.navbar-collapse
			ul.nav.navbar-nav.navbar-right
				each page, i in nav
					li
						if page.popup
							a(href="#{page.href}", target="_blank")= page.title
						else
							a(href="#{page.href}")= page.title
				li
					if user && user.admin
							a.active(href="/admin")
								b.text-warning Control Panel
				li
					if user
							a.active(href="#")
								b.text-success= user.username
					else
						a(href="/auth") Sign in

if header
	header
		.container
			!= header.content
