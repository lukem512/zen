extends ../../layout

block content
    script(src='/javascripts/admin/generic.js')
    script(src='/javascripts/admin/users.js')
    h1= title
    form#formAddUser(name="adduser",role="form",method="post",action="/api/users/new")
        .form-group
            input#inputUserName.form-control(type="text", placeholder="Username", name="username")
        .form-group
            input#inputUserEmail.form-control(type="text", placeholder="Email address", name="useremail")
        .form-group
            input#inputUserPass.form-control(type="password", placeholder="Password", name="userpass")
        .form-group
            each group, i in groups
                label= group.name
                    input.form-control(type='checkbox', checked=false, name="usergroups", value="#{group.name}")
                &nbsp; &nbsp; &nbsp;
        .form-group
            button#btnSubmit.btn.btn-success(type="button", onclick="add()") Create