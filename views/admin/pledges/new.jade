extends ../../layout

block content
	script(src='/javascripts/admin/generic.js')
	script(src='/javascripts/admin/pledges.js')
	h1= title
	form#formAddPledge(name="addpledge", method="post", action="/api/pledges/new")
		select#inputUsername(name="username")
			for user in users
				option #{user.username}
		select#inputSchedule(name="schedule")
			for sched in schedules
				option #{sched._id}
		button#btnSubmit(type="button", onclick="add()") Create