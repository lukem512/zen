extends ../../layout

block content
	script(src='/javascripts/admin/generic.js')
	script(src='/javascripts/ui/schedules.js')
	h1.
		Details for #{schedule.title}
	p#scheduleId= schedule._id
	form#formViewSchedule(name="viewschedule",role="form",method="post",action="/api/schedules/update")
		.form-group
			input#inputTitle.form-control(type="text", placeholder="Title", name="title", value="#{schedule.title}")
		.row
			.form-group.col-xs-6
				input#inputStartDate.form-control(type="text", placeholder="Start date", name="start_date", value="#{start_date}")
			.form-group.col-xs-6
				input#inputStartTime.form-control(type="text", placeholder="Start time", name="start_time", value="#{start_time}")
		.row
			.form-group.col-xs-6
				input#inputEndDate.form-control(type="text", placeholder="End date", name="end_date", value="#{end_date}")
			.form-group.col-xs-6
				input#inputEndTime.form-control(type="text", placeholder="End time", name="end_time", value="#{end_time}")
		.form-group
			textarea#inputDescription.form-control(placeholder="Optional description about the event", name="description")
				| #{schedule.description}
		.form-group
			select#inputOwner.form-control(name="owner")
				for user in users
					option(selected=schedule.owner == user.username) #{user.username}
		.form-group
			button#btnUpdate.btn.btn-success(type="button", onclick="update();") Update
			&nbsp;
			button#btnDelete.btn.btn-danger(type="button", onclick="del();") Delete